@using bai1.Models;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MHXacNhan</title>
</head>
<body>
    <h2>Are your info is ready </h2>
    <!-- @{
        var info= Session["info"] as Information;
    } -->
    <p>
        Your fullname is:
        <span style="color: red;">@info.FullName</span>
    </p>
    <p>
        Your email is:
        <span style="color: red;">@info.IdStudent</span>
    </p>
    <p>
        Your photo :
        <img src="\Assets\Images\@info.FileImage" width="20%">
    </p>
    <p>
        Your note is:
        <span style="color: red;">@info.Note</span>
    </p>
    <p>
        We are known by
        <span style="color: red;">
            @{
                string str = "";
                if (info.Check1 != null)
                {
                    str = "Television";
                }
                if (info.Check2 != null)
                {
                    str += "Website";
                }
                if (info.Check3 != null)
                {
                    str += "Newspaper";
                }
                @str;
            }
        </span>
    </p>
    <p>
        Choose work time
        <span style="color:red;">
            @{
                string str1 = "";
                if (info.ChooseWorkTime == "1")
                {
                    str1 = " Morning(2-4-6)";
                }
                if (info.ChooseWorkTime == "2")
                {
                    str1 += "Afternoon(2-4-6)";
                }
                if (info.ChooseWorkTime == "3")
                {
                    str1 += "Morning(3-5-7)";
                }
                if (info.ChooseWorkTime == "4")
                {
                    str1 += "Afternoon(3-5-7)";
                }
                @str1;
            }
        </span>
    </p>
    <p>
        Choose object:
        <span style="color:red">
            @{
                string str2 = "";
                if (info.SelectCourse == "1")
                {
                    str2 = "Course 1";
                }
                if (info.SelectCourse == "2")
                {
                    str2 = "Course 2";
                }
                if (info.SelectCourse == "3")
                {
                    str2 = "Course 3";
                }
                @str2;
            }
        </span>
    </p>
    <h3>
        If your info is incorrect, please go back
        @Html.ActionLink("INDEX PAGE", "index", "Home");
    </h3>
</body>
</html>
